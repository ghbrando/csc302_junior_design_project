@namespace unicoreprovider.Components

<div class="card dashboard-card h-100 p-4 d-flex flex-column justify-content-between" 
     style="background-color: #1a1a1a; border: 1px solid #333; border-radius: 12px;">
    
    <div class="d-flex justify-content-between align-items-start mb-2">
        <span class="text-uppercase fw-bold" style="font-size: 0.75rem; letter-spacing: 1.5px; color: #666;">
            NODE STATUS
        </span>
        
        <label class="toggle-switch">
            <input type="checkbox" @bind="IsAccepting" />
            <span class="slider"></span>
        </label>
    </div>

    <div class="mt-2">
        <h2 class="fw-bold mb-0 display-6" 
            style="color: @(IsAccepting ? "#00e676" : "#666"); text-shadow: @(IsAccepting ? "0 0 10px rgba(0,230,118,0.4)" : "none");">
            @(IsAccepting ? "ACCEPTING" : "OFFLINE")
        </h2>
    </div>
</div>

<style>
    /* The Switch Container */
    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 48px;
        height: 24px;
    }

    /* Hide default HTML checkbox */
    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* The Slider */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0; left: 0; right: 0; bottom: 0;
        background-color: #333; /* Dark gray when off */
        transition: .4s;
        border-radius: 34px;
        border: 1px solid #444;
    }

    /* The Circle (Thumb) */
    .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 4px;
        bottom: 3px;
        background-color: #888;
        transition: .4s;
        border-radius: 50%;
    }

    /* Checked State (ON) */
    input:checked + .slider {
        background-color: rgba(0, 230, 118, 0.2); /* Faint green track */
        border-color: #00e676;
    }

    input:checked + .slider:before {
        transform: translateX(24px);
        background-color: #00e676; /* Bright Green Thumb */
        box-shadow: 0 0 10px #00e676; /* The Glow Effect */
    }
</style>

@code {
    // Default to true to match image
    private bool IsAccepting { get; set; } = true;
}