@using unicoreprovider.Models
@namespace unicoreprovider.Components

<style>
    /* 1. FORCE overrides for Bootstrap Table variables to be transparent */
    .table-dark-override {
        --bs-table-bg: transparent !important;
        --bs-table-striped-bg: transparent !important;
        --bs-table-hover-bg: #1a1a1a !important; /* Slightly lighter on hover */
        --bs-table-color: #a0a0a0 !important;
        --bs-table-border-color: #222 !important; /* Match border color */
        background-color: transparent !important; 
        color: #a0a0a0 !important;
    }

    /* 2. Remove any lingering backgrounds on cells */
    .table-dark-override th, 
    .table-dark-override td {
        background-color: transparent !important;
        border-bottom: 1px solid #222; /* darker border separator */
    }

    /* 3. Card Container - UPDATED to match #121212 */
    .vm-list-card {
        background-color: #121212 !important; /* Matches Dashboard Cards */
        border: 1px solid #222 !important;     /* Matches Dashboard Borders */
        border-radius: 8px !important;         /* Matches Dashboard Radius */
    }
</style>

<div class="card vm-list-card h-100 p-3"> <div class="d-flex align-items-center mb-3">
        <h6 class="text-uppercase fw-bold mb-0" style="letter-spacing: 1px; font-size: 0.75rem; color: #666;">
            Active VMs â€” Docker Sandbox
        </h6>
    </div>

    <div class="table-responsive">
        <table class="table table-dark-override align-middle mb-0">
            <thead>
                <tr class="text-uppercase" style="font-size: 0.7rem; color: #555; border-bottom: 1px solid #222;">
                    <th class="pb-2 ps-0" style="width: 10%;">VM ID</th>
                    <th class="pb-2" style="width: 25%;">Name</th>
                    <th class="pb-2" style="width: 20%;">Client</th>
                    <th class="pb-2" style="width: 20%;">CPU</th>
                    <th class="pb-2" style="width: 10%;">RAM</th>
                    <th class="pb-2" style="width: 10%;">Duration</th>
                    <th class="pb-2 text-end pe-0" style="width: 5%;">Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vm in Vms)
                {
                    <tr>
                        <td class="py-3 ps-0" style="font-family: monospace; color: #666; font-size: 0.8rem;">@vm.VmId</td>
                        
                        <td class="py-3 fw-bold text-white" style="font-size: 0.9rem;">@vm.Name</td>
                        
                        <td class="py-3" style="color: #888; font-size: 0.85rem;">@vm.Client</td>
                        
                        <td class="py-3">
                            <div class="d-flex align-items-center">
                                <div class="progress me-3" style="height: 5px; width: 80px; background-color: #222; border-radius: 2px;">
                                    <div class="progress-bar" 
                                         style="width: @vm.CurrentCpuUsage%; background-color: #3b82f6; border-radius: 2px;">
                                    </div>
                                </div>
                                <span class="small" style="color: #666;">@vm.CurrentCpuUsage.ToString("0")%</span>
                            </div>
                        </td>
                        
                        <td class="py-3" style="color: #888; font-size: 0.85rem;">@vm.RamGB GB</td>
                        
                        <td class="py-3" style="color: #888; font-size: 0.85rem;">
                            @(vm.Uptime.Hours)h @(vm.Uptime.Minutes)m
                        </td>
                        
                        <td class="py-3 text-end pe-0 fw-bold" style="color: #00e676; font-family: monospace; font-size: 0.95rem;">
                            @vm.CurrentSessionCost.ToString("C")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    [Parameter] public List<VirtualMachine> Vms { get; set; } = new();
}