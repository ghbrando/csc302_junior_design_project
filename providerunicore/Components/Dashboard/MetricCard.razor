@using System.Text
@namespace unicoreprovider.Components

<div class="card h-100 p-3 d-flex flex-column justify-content-between"
     style="background-color: var(--uc-bg-card); border: 1px solid var(--uc-border); border-radius: var(--uc-radius);">

    <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="d-flex align-items-center">
            <span class="dot me-2" style="background-color: @Color; box-shadow: 0 0 8px @Color;"></span>
            <span class="text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 1.2px; color: var(--uc-text-muted);">@Title</span>
        </div>
        <div class="d-flex align-items-baseline">
            <h2 class="fw-bold mb-0" style="font-size: 1.75rem; font-family: var(--uc-font-mono);">@Value</h2>
            <span class="fs-6 ms-1" style="color: var(--uc-text-muted);">@Unit</span>
        </div>
    </div>

    <div class="chart-container" style="height: 60px; position: relative;">
        <svg viewBox="0 0 100 25" preserveAspectRatio="none" style="width: 100%; height: 100%; overflow: visible;">
            <defs>
                <linearGradient id="gradient-@Title" x1="0" x2="0" y1="0" y2="1">
                    <stop offset="0%" stop-color="@Color" stop-opacity="0.3"/>
                    <stop offset="100%" stop-color="@Color" stop-opacity="0.0"/>
                </linearGradient>
            </defs>

            <path d="@GenerateAreaPath()" fill="url(#gradient-@Title)" stroke="none" />
            <path d="@GenerateLinePath()" fill="none" stroke="@Color" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
    </div>

    <div class="mt-3 w-100" style="height: 6px; background-color: var(--uc-border-light); border-radius: 3px; overflow: hidden;">
        <div class="h-100"
             style="width: @Percent%; background-color: @Color; box-shadow: 0 0 10px @Color; transition: width 0.3s ease-out;">
        </div>
    </div>
</div>

<style>
    .dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        display: inline-block;
    }
</style>

@code {
    [Parameter] public string Title { get; set; } = "Metric";
    [Parameter] public string Value { get; set; } = "0";
    [Parameter] public string Unit { get; set; } = "%";
    [Parameter] public double Percent { get; set; } = 0;
    [Parameter] public string Color { get; set; } = "#3b82f6";
    [Parameter] public List<double> DataPoints { get; set; } = new();

    private string GenerateLinePath()
    {
        if (DataPoints == null || DataPoints.Count < 2) return "";

        var sb = new StringBuilder();
        double max = 100;
        double stepX = 100.0 / (DataPoints.Count - 1);

        for (int i = 0; i < DataPoints.Count; i++)
        {
            double x = i * stepX;
            double y = 25 - (DataPoints[i] / max * 25);

            if (i == 0) sb.Append($"M {x} {y}");
            else sb.Append($" L {x} {y}");
        }
        return sb.ToString();
    }

    private string GenerateAreaPath()
    {
        if (DataPoints == null || DataPoints.Count < 2) return "";

        string linePath = GenerateLinePath();
        return $"{linePath} L 100 25 L 0 25 Z";
    }
}